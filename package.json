{
  "name": "architects-hand-bridge",
  "version": "1.0.0",
  "description": "Local bridge for The Architect's Hand - Lux + Playwright browser automation",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "author": "Fede",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "node-fetch": "^2.7.0",
    "playwright": "^1.40.0"
  },
  "build": {
    "appId": "com.architectshand.bridge",
    "productName": "Architects Hand Bridge",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/playwright/.local-browsers",
        "to": "playwright-browsers",
        "filter": [
          "chromium*/**/*"
        ]
      }
    ]
  }
}
